#main
  %table
    %tr
      %td.label Title
      %td= @job.tag.title.description
    %tr
      %td.label Professional
      %td= @job.professional.name

  %br
  = form_for @order do |f|
    -if @order.errors.any?
      #error_explanation
        %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
        %ul
          - @order.errors.full_messages.each do |msg|
            %li= msg
    
    =# TODO Refactor
    #clientQuestionArea
      %h3 Answer Question
      - @client_questions.each do |client_question|
        %p= client_question.title
      = f.hidden_field :job         , :value => @job.id
      = f.hidden_field :client      , :value => current_user.id
      = f.hidden_field :professional, :value => @job.professional.id
      = f.submit 'Order'
